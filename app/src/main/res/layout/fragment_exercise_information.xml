<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.martinsaad.hackidc.ExerciseDetailsFragment"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercise Name"
        android:id="@+id/ExerciseName"
        android:layout_weight="0.01" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:layout_weight="0.97" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="40dp">
    <ImageButton
        android:id="@+id/user_comments"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/comments_user"
        android:gravity="center" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/comments_user" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="40dp">
        <ImageButton
            android:id="@+id/inspector_comments"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/trainer_comments"
            android:gravity="center" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/comments_trainner" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/next"
        android:layout_width="54dp"
        android:layout_height="60dp"
        android:background="@drawable/save"
        android:gravity="center"
        android:layout_marginLeft="150dp" />
</LinearLayout>