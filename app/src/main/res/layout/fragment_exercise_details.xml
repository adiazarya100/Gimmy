<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.martinsaad.hackidc.ExerciseDetailsFragment"
    android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="66dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exercise Name"
            android:id="@+id/ExerciseName"
            android:layout_marginTop="30dp"
            android:layout_weight="1.04" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageButton
                android:id="@+id/button_excerise_details"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:background="@drawable/exercisedetails"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="deprecated.ExerciseDetailsActivity"
        android:weightSum="1">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >


                    <ImageButton
                        android:id="@+id/lastWeight"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lastweight"
                        android:gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set1"
                    android:id="@+id/Set1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set2"
                    android:id="@+id/Set2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set3"
                    android:id="@+id/Set3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set4"
                    android:id="@+id/Set4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set5"
                    android:id="@+id/Set5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="20dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >


                    <ImageButton
                        android:id="@+id/currentWeight"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lastweight"
                        android:gravity="center"/>
                </FrameLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/newSet1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/newSet2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/newSet3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/newSet4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/newSet5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="30dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/timer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/timer"
                        android:gravity="center"/>
                </FrameLayout>
                <Chronometer
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:id="@+id/chronometer"
                    android:layout_weight="1.10"
                    android:layout_gravity="center"
                    android:allowUndo="false"
                    android:textSize="50dp"
                    android:typeface="serif"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/button_swap_exercise"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/swap_exercise"
                android:gravity="center"
                android:layout_weight="0.3" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/next"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_marginLeft="110dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
